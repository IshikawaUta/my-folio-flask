{
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "requirements": "requirements.txt"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)", // <<< RUTE PENTING UNTUK FILE STATIS!
      "dest": "/static/$1"  // <<< Memberitahu Vercel menyajikan dari folder static
    },
    {
      "src": "/robots.txt", // Rute untuk robots.txt
      "dest": "app.py"      // Diarahkan ke fungsi Flask (sesuai app.py Anda)
    },
    {
      "src": "/sitemap.xml", // Rute untuk sitemap.xml
      "dest": "app.py"       // Diarahkan ke fungsi Flask (sesuai app.py Anda)
    },
    {
      "src": "/(.*)",      // Rute catch-all untuk yang lainnya (termasuk root)
      "dest": "app.py"     // Diarahkan ke fungsi Flask
    }
  ]
}
